#include "opencv2/opencv.hpp"
#include <iostream>
using namespace std;
using namespace cv;

int main(int argc, char **argv) {
	Mat src = cv::imread("/Users/lisujia/Desktop/test.jpg", ImreadModes::IMREAD_COLOR);
//	Mat src = cv::imread("./test.jpg", ImreadModes::IMREAD_GRAYSCALE);

	if (src.empty()) {
		cout << "can't load image" << endl;
	}

	namedWindow("Display Image", WINDOW_AUTOSIZE);
	imshow("Display Image", src);
	cout << "Hello world" << endl;
	waitKey(0);
	return 0;
}
