#include "opencv2/opencv.hpp"
#include <iostream>
using namespace std;
using namespace cv;

int main(int argc, char **argv) {
	cv::Mat src = cv::imread("./test.jpg", cv::ImreadModes::IMREAD_GRAYSCALE);
	if (src.empty()) {
		cout << "can't load image" << endl;
	}

	cv::namedWindow("", )
	return 0;
}
