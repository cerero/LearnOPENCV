#include "opencv2/opencv.hpp"
#include <iostream>
using namespace std;
using namespace cv;

int main(int argc, char **argv) {
	Mat src = cv::imread("./test.jpg", ImreadModes::IMREAD_GRAYSCALE);
	if (src.empty()) {
		cout << "can't load image" << endl;
	}

	namedWindow("test", WINDOW_AUTOSIZE);
	imshow("test", src);
	cout << "Hello world" << endl;
	return 0;
}
